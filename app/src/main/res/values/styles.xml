<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e53935</item>
        <item name="colorPrimaryDark">#b71c1c</item>
        <item name="colorAccent">#e53935</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MainActivityThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">#0A0A0A</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">#0A0A0A</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="android:textColor">#fff</item>

    </style>
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#e53935</item>
        <item name="colorPrimaryDark">#b71c1c</item>
        <item name="colorAccent">#e53935</item>
        <item name="android:textColor">#000</item>

    </style>
    <style name="splashstyleDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#0A0A0A</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#fff</item>

    </style>
